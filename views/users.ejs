<script defer type="text/javascript">

    function getCookie(cname) {
        var name = cname + "=";
        var decodedCookie = decodeURIComponent(document.cookie);
        var ca = decodedCookie.split(';');
        for(var i = 0; i <ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') {
            c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
            return c.substring(name.length, c.length);
        }
        }
        return "";
    }

    function hasCookie() {
      var username = getCookie("account");
      if (username != "") {
          return true;
      } else {
          return false;
      }
    }
    
    if(hasCookie()){   
        let me = getCookie("account").split(",")
        document.getElementById("welcome-box").innerHTML = "Welcome " + me[0]
        document.getElementById("username").innerHTML = "Username: " + me[0]
        document.getElementById("email").innerHTML = "Email: " + me[1]
        document.getElementById("myname").innerHTML = me[0]
    } else {
        window.location.href = "/login"
    }

    document.getElementById("user").innerHTML = "Log out";
    document.getElementById("user").onclick = function() {
        document.cookie = "account=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
    };

</script>